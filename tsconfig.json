{
	"compilerOptions": {
		"declaration": false,
		"module": "commonjs",
		"outDir": "_build/",
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"listFiles": true,
		"noImplicitAny": true,
		"pretty": true,
		"moduleResolution": "node",
		"target": "es6"
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./typings/index.d.ts"
	]
}
